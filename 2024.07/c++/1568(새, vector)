#include <bits/stdc++.h>
using namespace std;

int main() {
    int N, result=0;
    vector<long long> vec0;
    cin >> N;
    long long temp;
    while (N > 0) {
        temp = 1;
        while (N >= temp) {
            N -= temp;
            //cout << temp <<" : " <<result << "\n";
            result++;
            temp++;
        }
    }
    cout << result;

}
