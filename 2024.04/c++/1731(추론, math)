#include<bits/stdc++.h>
using namespace std;
int main() {
    int n;
    cin >> n;
    long long temp = 0;
    long long num0;
    long long num1;
    long long num2;
    cin >> num0 >> num1 >> num2;
    if (num1 - num0 == num2 - num1) {
        temp = num1 - num0;
        for (int i = 3; i < n; i++) {
            cin >> num2;
        }
        cout << num2 + temp;
    }
    else{
        temp = num1 / num0;
        for (int i = 3; i < n; i++) {
            cin >> num2;
        }
        cout << num2 * temp;
    }
    
    
}
